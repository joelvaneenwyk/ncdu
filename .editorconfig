# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.{ac,am}]
indent_size = 2
end_of_line = lf

[Makefile.am]
indent_size = 8
indent_style = tab
